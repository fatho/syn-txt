(define (arpeggio/maj base length)
    (piano-roll
        (note :pitch base :length (/ length 3))
        (note :pitch (transpose base 3) :length (/ length 3))
        (note :pitch (transpose base 5) :length (/ length 3))
    )
)

(define melody
    (piano-roll
        (arpeggio/maj "c2" 1/4)
        (arpeggio/maj "d2" 1/4)
        (arpeggio/maj "e2" 1/4)
        (arpeggio/maj "c2" 1/4)
    )
)

(song :bpm 90 :notes melody)