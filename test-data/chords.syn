(define melody
    (begin
        (define (chord len a b c)
            (define vel (/ 1 3))
            (list
                (note :start 0 :pitch a :length len :velocity vel)
                (note :start 0 :pitch b :length len :velocity vel)
                (note :start 0 :pitch c :length len :velocity vel)
            )
        )

        (sequence-all
            (list
                (chord 1/1 "a2" "c3" "e3")
                (chord 1/1 "a2" "d3" "f3")
                (chord 1/2 "g#2" "b3" "e3")
                (chord 1/2 "g#2" "b3" "d3")
                (chord 1/1 "a2" "c3" "e3")
            ))))

(song :bpm 120 :notes melody)