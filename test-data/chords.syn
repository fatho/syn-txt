(define melody
    (begin
        (define (chord length a b c)
            (piano-roll/stack
                (note :pitch a :length length :velocity (/ 1.0 3))
                (note :pitch b :length length :velocity (/ 1.0 3))
                (note :pitch c :length length :velocity (/ 1.0 3))
            )
        )

        (piano-roll
            (chord 1/1 "a2" "c3" "e3")
            (chord 1/1 "a2" "d3" "f3")
            (chord 1/2 "g#2" "b3" "e3")
            (chord 1/2 "g#2" "b3" "d3")
            (chord 1/1 "a2" "c3" "e3")
        )
    )
)

(song :bpm 120 :notes melody)