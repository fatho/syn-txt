(define melody
    (begin
        (define (repeat-note n :pitch pitch :length length)
            (map
                (lambda (i)
                    (note :start (* i length) :pitch pitch :length length))
                (range 0 (- n 1))
            )
        )

        (sequence-all
            (list
                (repeat-note 8 :pitch "a3" :length 1/16)
                (repeat-note 4 :pitch "a3" :length 1/4)
                (repeat-note 2 :pitch "a3" :length 1/2)
            ))))

(song :bpm 90 :notes melody)